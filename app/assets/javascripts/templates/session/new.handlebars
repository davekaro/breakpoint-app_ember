<div class="page-header">
  <h1>Sign in</h1>
</div>

{{#if invalidCredentials}}
  <div class="alert alert-warning">Wrong email or password</div>
{{/if}}

<div class="row">
  <div class="col-md-6">
    {{#formFor model action="signIn"}}
      {{input email}}
      {{input password}}
      {{#input rememberMe}}
        <div class="checkbox">
          <label>
            {{inputField rememberMe as="checkbox"}} Remember me
          </label>
        </div>
      {{/input}}

      <button type="submit" class="btn btn-primary">Sign in</button>
    {{/formFor}}
  </div>
</div>

